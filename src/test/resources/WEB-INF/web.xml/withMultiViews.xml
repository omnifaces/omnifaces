<web-app
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
    version="6.0"
>
    <context-param>
        <param-name>org.omnifaces.FACES_VIEWS_SCAN_PATHS</param-name>
        <param-value>/*.xhtml/*,!/excludedfolder</param-value>
    </context-param>

    <servlet>
        <servlet-name>facesServlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>facesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>MultiViewsITWelcomeFile</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/404.xhtml</location> <!-- We don't want to show 403 on disabled directory listings -->
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/404.xhtml</location>
    </error-page>

    <mime-mapping>
        <extension>xhtml</extension>
        <mime-type>text/html</mime-type> <!-- work around for failing error page rendering in GlassFish -->
    </mime-mapping>
</web-app>